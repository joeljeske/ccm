{
    "compilerOptions": {
      "baseUrl": ".",
      "rootDirs": [".",],
      "paths": {
        "packages/*": ["./packages/*"]
      },
      "lib": ["ES2020"],
      "moduleResolution": "node",
      "module": "ESNext",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "preserveConstEnums": true,
      "target": "ES2020",
      "sourceMap": true,
      "importHelpers": false,
      "skipLibCheck": false,
      "declaration": true,
      "strict": true,
      "jsx": "react",
      "jsxFactory": "createElement",
      "allowSyntheticDefaultImports": true
    }
  }
