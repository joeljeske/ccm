load("@build_bazel_rules_nodejs//:index.bzl", "generated_file_test", "npm_package_bin")

package(default_testonly = True)

npm_package_bin(
    name = "test",
    outs = [
        "test.ccm.css.ts",
        "test.css",
    ],
    args = [
        "--outputRoot $(BINDIR)",
        "--inputRoot .",
        "--generateScopedName optimized",
        "--templateType typescript-source",
        "--runtimeModule packages/react-runtime",
        "$(location test.ccm.css)",
    ],
    data = ["test.ccm.css"],
    tool = "//packages/cli",
)

generated_file_test(
    name = "golden-css",
    src = "test.golden.css",
    generated = "test.css",
)

generated_file_test(
    name = "golden-ts",
    src = "test.golden.ccm.css.ts",
    generated = "test.ccm.css.ts",
)
